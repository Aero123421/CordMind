# Discord
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
# Optional: use for guild-only command registration during dev
DISCORD_GUILD_ID=

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/discordai?schema=public
# Docker runtime uses db hostname; set only if different from DATABASE_URL
DATABASE_URL_DOCKER=postgresql://postgres:postgres@db:5432/discordai?schema=public

# Encryption (32 bytes base64)
DISCORDAI_ENCRYPTION_KEY=

# Optional defaults
DEFAULT_PROVIDER=gemini
DEFAULT_MODEL=

# Provider base URLs (OpenAI-compatible providers)
XAI_BASE_URL=https://api.x.ai/v1
GROQ_BASE_URL=https://api.groq.com/openai/v1
CEREBRAS_BASE_URL=https://api.cerebras.ai/v1
ZAI_BASE_URL=https://api.z.ai/v1

# Provider model lists (comma-separated, optional)
GEMINI_MODELS=
XAI_MODELS=
GROQ_MODELS=
CEREBRAS_MODELS=
ZAI_MODELS=

# Audit log retention (days)
AUDIT_RETENTION_DAYS=7

# Optional: wait retries for DB (entrypoint)
DB_WAIT_RETRIES=30
